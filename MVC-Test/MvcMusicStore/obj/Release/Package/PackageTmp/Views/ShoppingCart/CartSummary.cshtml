@Html.ActionLink("Cart (" + ViewData["CartCount"] + ")",
    "Index",
    "ShoppingCart",
    new { id = "cart-status" })
<div id="product-detail">
    <button onclick="openPopup()">Open Product Popup</button>
    <!-- Include necessary JavaScript libraries -->
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet"
          type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")"
            type="text/javascript"></script>
    <style>
        /* Custom styles for the popup */
        .custom-popup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            border-radius: 5px;
            z-index: 9999;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

    </style>
    <script>
        function openPopup() {
            $.ajax({
                url: '/Store/Details/5',
                type: 'GET',
                success: function (result) {
                    // Display the partial view as a popup
                    // You can also use a library like Bootstrap Modal or your own custom logic here
                    $('#popupContainer').html(result);

                },
                error: function (xhr, status, error) {
                    // Handle error if necessary
                }
            });
        }

    </script>


    <div id="popupContainer" class="custom-popup">
    </div>
</div>

